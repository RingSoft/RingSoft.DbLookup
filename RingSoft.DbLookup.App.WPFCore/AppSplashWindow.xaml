<Window x:Class="RingSoft.DbLookup.App.WPFCore.AppSplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AppSplashWindow" Height="150" Width="350"
        WindowStyle="None" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="RingSoft Database Lookup Demo" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <TextBlock Text="WPF .NET Core 3.1" TextAlignment="Center" Margin="10"/>
        <TextBlock x:Name="ProgressTextBlock" TextAlignment="Center" Margin="10"/>
        <ProgressBar Width="350" Height="20" IsIndeterminate="True" Margin="10,0,10,0"/>
    </StackPanel>
</Window>
